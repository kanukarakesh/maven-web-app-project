pipeline {
    agent any

    tools {
        maven 'maven-3.9.9'   // configure in Jenkins Global Tool Configuration
        jdk 'jdk-1.8'         // configure in Jenkins Global Tool Configuration
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'development', url: 'https://github.com/your-repo-url.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

        stage('Deploy to Local Jetty') {
            steps {
                sh 'mvn jetty:run'
            }
        }
    }
}
